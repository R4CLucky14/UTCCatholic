@model UTCCatholic.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Register";
}

<hgroup>
    <h2>@ViewBag.Title.</h2>
    <h3>Associate your @ViewBag.LoginProvider account.</h3>
</hgroup>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

	<fieldset>
		<legend>Association Form</legend>
		<p class="text-success">
			You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.
			Please enter a user name for this site below and click the Register button to finish
			logging in.
		</p>
		<div class="input-control text" data-role="input-control">
			<label>User Name: </label>
			@Html.TextBoxFor( m => m.UserName, new { placeholder = "User Name" } )
			<button class="btn-clear" tabindex="-1" type="button"></button>
			@Html.ValidationMessageFor( m => m.UserName )
		</div>
	</fieldset>
	<br />
	<fieldset>
		<span class="pull-right">
			<a href="@Url.Action("Index", "Awakening")" class="btn">Cancel</a>
			<button type="submit" class="large success">
				<span class="glyphicon glyphicon-floppy-disk">
				</span>
				Register
			</button>
		</span>
	</fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
