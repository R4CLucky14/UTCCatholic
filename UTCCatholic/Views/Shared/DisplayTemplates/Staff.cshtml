@model UTCCatholic.ViewModels.StaffView

<div class="grid fluid">
	<div class="row">
		<div class="col-xs-6">
			<div class="input-control textarea" data-role="input-control">
				<label>@Html.LabelFor( m => m.PreviousAttended )</label>
				<textarea disabled>@Model.PreviousAttended</textarea>
			</div>
		</div>
		<div class="col-xs-6">
			<div class="input-control textarea" data-role="input-control">
				<label>@Html.LabelFor( m => m.PreviousPositions )</label>
				<textarea disabled>@Model.PreviousPositions</textarea>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6">
			<div class="input-control textarea" data-role="input-control">
				<label>@Html.LabelFor( m => m.PreviousTalk )</label>
				<textarea disabled>@Model.PreviousTalk</textarea>
			</div>
		</div>
		<div class="col-xs-6">
			<div class="input-control textarea" data-role="input-control">
				<label>@Html.LabelFor( m => m.InterestedTalk )</label>
				<textarea disabled>@Model.InterestedTalk</textarea>
			</div>
		</div>
	</div>
	<div class="row">
		<label class="subheader-secondary">Staff Positions Wanted</label>
		<fieldset>
			<div class="col-sm-4">
				<div class="input-control text" data-role="input-control">
					<label>@Html.LabelFor( m => m.FirstChoice )</label>
					<input value="@Model.FirstChoice.Title" disabled />

				</div>
			</div>
			<div class="col-sm-4">
				<div class="input-control text" data-role="input-control">
					<label>@Html.LabelFor( m => m.SecondChoice )</label>
					<input value="@Model.SecondChoice.Title" disabled />
				</div>
			</div>
			<div class="col-sm-4">
				<div class="input-control text" data-role="input-control">
					<label>@Html.LabelFor( m => m.ThirdChoice )</label>
					<input value="@Model.ThirdChoice.Title" disabled />
				</div>
			</div>
		</fieldset>
	</div>
	<div class="row">
		<div class="col-xs-6">
			<div class="input-control textarea" data-role="input-control">
				<label>@Html.LabelFor( m => m.LeadershipPosition )</label>
				<textarea disabled>@Model.LeadershipPosition</textarea>
			</div>
		</div>
		<div class="col-xs-6">
			<div class="input-control textarea" data-role="input-control">
				<label>@Html.LabelFor( m => m.AdditionalComments )</label>
				<textarea disabled>@Model.AdditionalComments</textarea>
			</div>
		</div>
	</div>
</div>